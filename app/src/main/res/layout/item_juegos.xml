<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/ivCaratulaJuego"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTituloJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_juego"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCaratulaJuego"
        app:layout_constraintStart_toEndOf="@+id/ivCaratulaJuego"
        app:layout_constraintTop_toTopOf="@+id/ivCaratulaJuego" />

</androidx.constraintlayout.widget.ConstraintLayout>